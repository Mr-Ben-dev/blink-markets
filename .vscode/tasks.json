{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "WASM Build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "wasm:build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Testnet Init",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "tn:init"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Testnet Publish",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "tn:publish"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": "WASM Build"
        },
        {
            "label": "Local Up",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "local:up"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^Local net ready\\.",
                    "file": 1,
                    "line": 1,
                    "column": 1,
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting local Linera net",
                    "endsPattern": "^Local net ready\\."
                }
            }
        },
        {
            "label": "Local Publish",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "local:publish"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": "WASM Build"
        },
        {
            "label": "Linera Service",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "linera:service"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "line": 1,
                    "column": 1,
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting",
                    "endsPattern": "^Listening"
                }
            }
        },
        {
            "label": "Dev (Vite)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "line": 1,
                    "column": 1,
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^vite",
                    "endsPattern": "^\\s*Local:\\s*http://localhost:5173"
                }
            }
        }
    ]
}